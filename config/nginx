server {
	server_name kms-beta.block.science;

	# path to static files, update as needed
	root /home/admin/kms-api/frontend/dist;

	location / {
		# proxy_pass https://localhost:3000;
		try_files $uri/index.html $uri.html $uri $uri/ /index.html =404;
	}

    location /api/ {
		# forwards urls to API backend, but removes /api/ in the sent path 
		proxy_pass http://localhost:8000;
		rewrite ^/api(/.*)$ $1 break;
	}

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/kms-beta.block.science/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/kms-beta.block.science/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

} server {
    if ($host = kms-beta.block.science) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	server_name kms-beta.block.science;
	listen 80;
    return 404; # managed by Certbot


}
